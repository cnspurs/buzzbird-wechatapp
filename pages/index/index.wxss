.list{
    font-family: Arial, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
}

.card{
	padding: 18px 14px;
	border-bottom: solid rgb(230, 230, 230) 8px
}

.profile{
	display: flex;
	direction: colum
}

.avatar{
	display: inline-block;
	margin-right: 8px;
}

.avatar image{
	width: 50px;
	height: 50px;
	border-radius: 50%;
}

.info {
	margin: auto 0;
}

.name{
	font-size: 16px;
}

.time{
	font-size: 14px;
	color: #939393;
}

.content{
	font-size: 18px;
	line-height: 24px;
	margin: 8px 0;
	
}

.image {
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
}

.image .single{
	width: 100%;
	margin: 8px 0;
}

.image .multiple{
	justify-content: space-between;
	width: 49%;
	height: 160px;
	margin: 1px
}