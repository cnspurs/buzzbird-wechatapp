<wxs src="../util.wxs" module="util" />

<view class="list" wx:for="{{feeds}}" wx:for-item="item" wx:key="index">
	<view class="card" data-detail="{{item}}" bindtap="handleGoDetail">
        <view class="profile">
			<view class="avatar">
				<image src="https://tva4.sinaimg.cn/crop.0.0.640.640.180/006mMONSjw8f07e97juukj30hs0hsgls.jpg" />
			</view>
			<view class="info">
				<view class="name">{{item.user.chinese_name}} {{item.type}}</view>
				<view class="time">{{util.formatTime(item.created_at)}}</view>
			</view>
		</view>
		<view class="content">{{item.title}}</view>
		<view class="image" wx:if="{{item.media.length}}">
			<image mode="widthFix" src="{{item.media[0].url}}" />
		</view>
    </view>
</view>

