<view class="card">
	<view class="profile">
		<view class="avatar">
			<image src="{{avatar}}" />
		</view>
		<view class="info">
			<view class="name">{{name}}</view>
			<view class="time">{{time}}</view>
		</view>
	</view>
	<view class="content">{{content}}</view>
	<view class="image" wx:if="{{images.length > 0}}">
		<image src="{{images[0]}}" />
	</view>
	<button open-type="share" class="share">转发分享</button>
</view>