.card{
    font-family: Arial, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
	padding: 18px 14px;
}

.profile{
	display: flex;
	direction: colum
}

.avatar{
	display: inline-block;
	margin-right: 8px;
}

.avatar image{
	width: 50px;
	height: 50px;
	border-radius: 50%;
}

.info {
	margin: auto 0;
}

.name{
	font-size: 16px;
}

.time{
	font-size: 14px;
	color: #939393;
}

.content{
	font-size: 18px;
	line-height: 24px;
	margin: 8px 0;
	
}

.image image{
	width: 100%;
	margin: 8px 0;
}

.button_container {
	display: flex;
	flex-direction: row;
	margin-top: 14px;
}

.button_container button {
	width: 36%;
    display:flex;
    align-items:center;
    justify-content:center;
	border-radius: 12px;
	box-shadow: 2px 2px 0.5px 0px #494a4a;
}

.button_container .icon {
	width: 26px;
	margin-right: 10px;
}